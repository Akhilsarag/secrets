<h2 class="mb-4">Edit Secret</h2>
<form action="/edit/<%= secret._id %>" method="POST" class="w-50 mx-auto">
    <div class="mb-3">
        <textarea name="secret" class="form-control" required><%= secret.content %></textarea>
    </div>
    <button type="submit" class="btn btn-primary w-100">Save Changes</button>
</form>

